<resources>

    <style name="Imgly.PESDK.Editor.Panel.Overlay" parent="Imgly.PESDK.Editor.Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.default.Item.SelectBackground" parent="Imgly.PESDK"/>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem" parent="Imgly.PESDK.default.Item">
        <item name="android:layout_marginTop">@dimen/container_item_marginTop</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Icon" parent="Imgly.PESDK.default.Item.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/overlay_list_margin_left</item>
        <item name="android:layout_marginStart">@dimen/overlay_list_margin_left</item>
        <item name="android:layout_marginRight">@dimen/overlay_list_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/overlay_list_margin_right</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.SelectOverlay" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Label" parent="Imgly.PESDK.default.Item.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_label_text_size</item>
        <item name="android:textColor">@color/imgly_text_color</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/imgly_item_overlay_label_bg</item>
        <item name="android:text">@string/pesdk_overlay_title_name</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.Value" parent="Imgly.PESDK.default.Item.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/imgly_text_color</item>
        <item name="android:text">100</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.OverlayItem.SelectBackground" parent="Imgly.PESDK.Editor.Panel.default.Item.SelectBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.BlendModeItem" parent="Imgly.PESDK">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/imgly_item_border</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">@dimen/blend_mode_margin_left</item>
        <item name="android:layout_marginStart">@dimen/blend_mode_margin_left</item>
        <item name="android:layout_marginRight">@dimen/blend_mode_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/blend_mode_margin_right</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.BlendModeItem.Label" parent="Imgly.PESDK.default.Item.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.ModeList" parent="Imgly.PESDK">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.SeekSlider" parent="Imgly.PESDK.SeekSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Imgly.PESDK.Editor.Panel.Overlay.ModeContainer" parent="Imgly.PESDK">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/imgly_editor_toolbar_background</item>
    </style>

</resources>