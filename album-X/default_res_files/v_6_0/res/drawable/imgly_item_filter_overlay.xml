<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="400" android:exitFadeDuration="400">
    <item android:state_selected="false">
        <shape>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#BF000000" android:endColor="#26000000" android:angle="90"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>