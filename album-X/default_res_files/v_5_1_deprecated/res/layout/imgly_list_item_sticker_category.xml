<ly.img.android.ui.widgets.AutoRotateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginStart="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginEnd="0.5dp"
    android:id="@+id/contentHolder"
    android:background="@drawable/imgly_item_sticker_category_border">

    <ly.img.android.ui.widgets.ImageSourceView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="8dp"
        style="@style/Imgly.Editor.Toolbar.Panels.Sticker.ItemIcon"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imgly_tool_name_orientation"
        style="@style/Imgly.Editor.Toolbar.Panels.Sticker.ItemIcon"
        android:visibility="gone"/>

</ly.img.android.ui.widgets.AutoRotateLayout>
