<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có muốn xóa thư mục Secure Folder không? Tất cả mọi ảnh trong Secure Folder sẽ bị xóa bỏ cùng với mã PIN"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="25dp" />
    <View
        style="@style/Divider.Horizontal"
        android:layout_height="2dp"/>
    <Button
        android:id="@+id/delete_secure_folder_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stateListAnimator="@null"
        android:text="Xóa mọi dữ liệu của Secure Folder"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:background="@color/imgly_transparent_color"
        />
    <View
        style="@style/Divider.Horizontal"
        android:layout_height="2dp"/>
    <Button
        android:id="@+id/delete_secure_folder_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:state_pressed="true"
        android:text="Hủy"
        android:textAllCaps="false"
        android:background="@color/imgly_transparent_color"
        />
</LinearLayout>